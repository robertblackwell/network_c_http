{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs":[
        {
            "id":"myTimerTest",
            "type":"pickString",
            "description": "Select the time test to run",
            "options": [
                "test_timer_non_repeating",
                "test_timer_post",
                "test_timer_single_repeating",
                "test_timer_multiple_repeating",
                "test_timer_multithread"
            ],
            "default": "test_timer_non_repeating"
        }

    ],
    "configurations": [
        {
            "name": "c/cpp test_timer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/test_runloop/test_timers/${input:myTimerTest}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MARVIN_HOME",
                    "value": "${workspaceFolder}"
                }
            ],
            "externalConsole": false,
            "windows" :{},
            "osx":{
                "MIMode": "lldb",
            },
            "linux":{
                "MIMode": "gdb",
            },
            "preLaunchTask": "mymake",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        },
        {
            "name": "(gdb) timer_single_repeating",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/test_runloop/test_timers/test_timer_single_repeating",
            "args": ["stop", "-c"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MARVIN_HOME",
                    "value": "${workspaceFolder}"
                }
            ],
            "externalConsole": false,
            "windows" :{},
            "osx":{
                "MIMode": "lldb",
            },
            "linux":{
                "MIMode": "gdb",
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        }
    ]

}