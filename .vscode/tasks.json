{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs":[
        {
            "type": "pickString",
            "id": "buildDir",
            "description": "Build directory",
            "options":[
                "build",
                "cmake-build-debug",
            ],
            "default": "build"
          }
    ],
    "tasks": [
        {
            "type": "shell",
            "label": "my build",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "mycmake",
            "command": "/usr/local/bin/cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                ".."
            ],
            "options": {
                "cwd": "${workspaceRoot}/${input:buildDir}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "mymake_clean",
            "command": "make clean",
            "args": [
            ],
            "options": {
                "cwd": "${workspaceRoot}/${input:buildDir}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "mymake",
            "command": "make",
            "args": [
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceRoot}/${input:buildDir}"
            },
            "dependsOn":[
                "mymake_clean"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "CTest",
            "command": "ctest",
            "args": [],
            "options": {
                "cwd": "${workspaceRoot}/${input:buildDir}"
            },
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
